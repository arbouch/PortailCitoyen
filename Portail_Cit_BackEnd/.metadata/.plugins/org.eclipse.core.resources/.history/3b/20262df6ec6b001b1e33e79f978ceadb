package com.example.demo.UserRepository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;

import com.example.demo.UserModel.User;
import com.example.demo.UserService.publicvoid;

public interface RegistrationRepository extends JpaRepository<User, Integer>{
 public User findBynumtel(String numtel);
 public User findBynumtelAndCin(String numtel,int cin);
 
 
 @Modifying
	@Query("update User u set u.otp = ?1  where u.numtel = ?3")
	public void setUserInfoById(String otp,  Integer numtel);
}
